{
  "name": "@pixium-digital/host-it",
  "version": "0.0.7",
  "description": "Simply host a folder to a static express route",
  "repository": "https://github.com/pixiumdigital/host-it.git",
  "author": "crimson-med <mederic.burlet@gmail.com>",
  "license": "GPL-3.0-only",
  "private": false,
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^16.4.2",
    "@types/yargs": "^17.0.2",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-basic-auth": "^1.2.0",
    "yargs": "^17.0.1"
  },
  "files": [
    "lib/**/*"
  ],
  "bin": {
    "host-it": "lib/Cli.js"
  },
  "main": "lib/HostIt.js",
  "types": "lib/HostIt.d.ts",
  "scripts": {
    "build": "tsc",
    "prepare": "yarn build",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "patch": "npm version patch && npm publish --access public",
    "test1": "ts-node src/HostIt.ts",
    "test2": "ts-node src/Cli.ts --directory=\"test\"",
    "test3": "ts-node src/Cli.ts --directory=\"test\" --username=\"admin\" --password=\"root\""
  }
}